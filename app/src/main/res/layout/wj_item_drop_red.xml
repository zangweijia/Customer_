<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="54dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_red_p" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="vertical" >

            <View
                android:id="@+id/v"
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="5"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_red_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="新人红包"
            android:textColor="@color/txt_333333"
            android:textSize="@dimen/txt_size_14" />

        <TextView
            android:id="@+id/tv_red_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="新人红包"
            android:textColor="@color/bg_666666"
            android:textSize="@dimen/txt_size_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_red_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="新人红包"
                android:textColor="@color/bg_666666"
                android:textSize="@dimen/txt_size_12" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_isuse"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/ic_isuse"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_expired"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/ic_expired"
        android:visibility="gone" />

</LinearLayout>