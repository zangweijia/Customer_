<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="185dp"
    android:layout_height="270dp"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/iv_product_thumbnails"
            android:layout_width="159dp"
            android:layout_height="159dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_default_image" />

        <ImageView
            android:id="@+id/iv_no_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/no_product"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" >

            <TextView
                android:id="@+id/txt_sell_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:text="￥188.00"
                android:textColor="@color/main_color"
                android:textSize="18sp" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_market_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:text="￥200.00"
                android:textColor="@color/bg_999999"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.3"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:lines="2"
            android:text="@string/txt_shops_default_name"
            android:textColor="@color/bg_666666"
            android:textSize="@dimen/txt_size_12" />
    </LinearLayout>

</LinearLayout>