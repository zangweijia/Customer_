<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="112dp"
        android:layout_height="112dp" >

        <ImageView
            android:id="@+id/iv_product_thumbnails"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_margin="8dp"
            android:background="@color/bg_bgbg" />

        <ImageView
            android:id="@+id/iv_no_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/no_product"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:lines="2"
            android:text="@string/txt_shops_default_name"
            android:textColor="@color/bg_666666"
            android:textSize="@dimen/txt_size_10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_sell_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:text="￥188.00"
                android:textColor="@color/main_color"
                android:textSize="@dimen/txt_size_12" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_market_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:text="￥200.00"
                android:textColor="@color/bg_999999"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>