<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/me_bg">

        <RelativeLayout
            android:id="@+id/customer"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_head_portrait"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_touxiangcilcle" />

                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/nv" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/my_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="登录/注册"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_size_15" />

                <TextView
                    android:id="@+id/my_tv_qianming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="我是一只小小小鸟"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_size_12"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/my_iv_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/me_setting" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/distribution"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:visibility="gone">

            <com.bopinjia.customer.view.RoundImageView
                android:id="@+id/dis_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_touxiangcilcle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_size_15" />

                <TextView
                    android:id="@+id/tv_fxhybh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="分销会员编号：000000"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_size_12" />

                <LinearLayout
                    android:id="@+id/ll_comission_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_bg"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_type"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/tv_dis_type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="3dp"
                        android:text="金牌分销会员"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/txt_size_12" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_set"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/me_setting" />

                <ImageView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_ewm" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/my_all2"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:background="@drawable/me_myoders" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="我的订单"
                android:textColor="@color/txt_333333"
                android:textSize="@dimen/txt_size_12" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/my_tv_all_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:drawableRight="@drawable/me_1"
                android:gravity="center_vertical"
                android:text="查看全部订单"
                android:textColor="#ff5400"
                android:textSize="@dimen/txt_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/my_btn_pending_payment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="7dp"
                android:paddingTop="7dp">

                <ImageView
                    android:id="@+id/iv_my_btn_pending_payment"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="7dp"
                    android:src="@drawable/ic_menu_pending_payment" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/txt_mine_menu_unpaid"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/txt_size_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_btn_unshipping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="7dp"
                android:paddingTop="7dp">

                <ImageView
                    android:id="@+id/iv_my_btn_unshipping"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="7dp"
                    android:src="@drawable/ic_menu_unshipping" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/txt_mine_menu_unshipping"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/txt_size_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_btn_unreceiving"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="7dp"
                android:paddingTop="7dp">

                <ImageView
                    android:id="@+id/iv_my_btn_unreceiving"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="7dp"
                    android:src="@drawable/ic_menu_unreceiving" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/txt_mine_menu_unreceiving"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/txt_size_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_btn_aftermarket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="7dp"
                android:paddingTop="7dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="7dp"
                    android:src="@drawable/ic_menu_aftermarket" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="退款/退货"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/txt_size_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/bg_bgline" />

    <ScrollView
        android:id="@+id/my_all3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/my_fxgl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/_me_list"
                    android:drawableLeft="@drawable/ic_fxgl"
                    android:text="分销管理" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/me_2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/bg_bgline" />

            <LinearLayout
                android:id="@+id/my_money"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:paddingRight="10dp">

                <!--<item name="android:layout_width">0dp</item>-->
                <!--<item name="android:layout_height">40dp</item>-->
                <!--<item name="android:layout_weight">1</item>-->
                <!--<item name="android:drawablePadding">10dp</item>-->
                <!--<item name="android:textSize">@dimen/txt_size_12</item>-->
                <!--<item name="android:textColor">@color/txt_333333</item>-->
                <!--<item name="android:layout_marginLeft">11dp</item>-->
                <!--<item name="android:gravity">center_vertical</item>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="11dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_my_money"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="我的收入"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/txt_size_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/bg_bgline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="43dp"
                        android:text="￥0"
                        android:textColor="@color/bg_666666" />

                    <TextView
                        android:id="@+id/tv_comission_money"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="金牌佣金的收入：￥0"
                        android:textColor="@color/main_color" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/bg_bgline" />

            <LinearLayout
                android:id="@+id/my_red_pagket"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/_me_list"
                    android:drawableLeft="@drawable/ic_red_packet"
                    android:text="我的红包" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/me_2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/bg_bgline" />

            <LinearLayout
                android:id="@+id/my_myfavorite"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/_me_list"
                    android:drawableLeft="@drawable/me_myfavorite"
                    android:text="我的收藏" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/me_2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_bgline" />

            <LinearLayout
                android:id="@+id/my_myaddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/_me_list"
                    android:drawableLeft="@drawable/me_address"
                    android:text="通关信息" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/me_2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/bg_bgline" />

            <LinearLayout
                android:id="@+id/my_mycode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/_me_list"
                    android:drawableLeft="@drawable/me_code"
                    android:text="扫码直达" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/me_2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/bg_bgline" />

            <LinearLayout
                android:id="@+id/my_mynearbystore"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/_me_list"
                    android:drawableLeft="@drawable/me_duty_freestore"
                    android:text="家门口的免税店" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/me_2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/bg_bgline" />

            <LinearLayout
                android:id="@+id/my_myjoin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/_me_list"
                    android:drawableLeft="@drawable/me_join"
                    android:text="我要加盟" />

                <TextView
                    android:id="@+id/txt_shenqing"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/txt_size_12" />

                <ImageView
                    android:id="@+id/shenqingiv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/me_2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/bg_bgline" />

            <ImageView
                android:id="@+id/iv_fxsq"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_my_fxsq" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>