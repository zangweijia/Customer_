<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <CheckBox
        android:id="@+id/chk_select_product"
        style="@style/custom_checkbox"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone" />

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/bg_transparent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7.5" >

        <ImageView
            android:id="@+id/iv_product_thumbnails"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_default_image"/>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/txt_product_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="left|center_vertical"
                android:text="@string/txt_shops_default_name"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_size_normal"
                android:lines="2"
            	android:lineSpacingMultiplier="1.0"
            	android:ellipsize="end" />

            <TextView
                android:id="@+id/txt_product_tax"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/txt_cart_product_tax"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/txt_size_normal"
                android:visibility="gone" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/bg_frame_gray" >

                    <TextView
                        android:id="@+id/btn_reduce"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/cmm_btn_reduce"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/txt_size_big" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_divider_line" />

                    <TextView
                        android:id="@+id/txt_product_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/txt_size_big" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_divider_line" />

                    <TextView
                        android:id="@+id/btn_add"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/cmm_btn_add"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/txt_size_big" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/txt_sell_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:paddingBottom="2dp"
                android:text="￥188"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_size_small" />

            <TextView
                android:id="@+id/txt_market_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|top"
                android:paddingTop="2dp"
                android:text="￥200"
                android:textColor="@color/txt_deep_gray"
                android:textSize="@dimen/txt_size_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_frame_gray"
                    android:gravity="center"
                    android:text="@string/cmm_btn_delete"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/txt_size_big"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>