<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_title"
        layout="@layout/wj_include_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_fxs_store"
        android:gravity="center" >

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="50dp" >

            <com.bopinjia.customer.view.RoundImageView
                android:id="@+id/iv_head"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_touxiang" />

            <ImageView
                android:id="@+id/iv_change_head"
                android:layout_width="@dimen/padding25"
                android:layout_height="@dimen/padding25"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/myself_paizhao" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_height"
        android:layout_marginLeft="12dp"
        android:paddingRight="10dp" >

        <TextView
            style="@style/_add_address_text"
            android:text="店铺名称" />

        <EditText
            android:id="@+id/edt_shop_name"
            style="@style/_add_address_edit"
            android:layout_marginLeft="10dp"
            android:gravity="right|center_vertical"
            android:hint="请输入您的小店名称" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/me_2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_bgline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:paddingRight="10dp" >

        <TextView
            style="@style/_add_address_text"
            android:text="店铺介绍" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_clean"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sorlistview_emotionstore_progresscancelbtn" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <EditText
            android:id="@+id/edt_introduce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="left|top"
            android:hint="请输入店铺介绍"
            android:minLines="3"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/bg_666666"
            android:textSize="@dimen/txt_size_12" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="0/30"
            android:textColor="@color/bg_666666"
            android:textSize="@dimen/txt_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_bgline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_height"
        android:layout_marginLeft="12dp"
        android:paddingRight="10dp" >

        <TextView
            style="@style/_add_address_text"
            android:text="联系人" />

        <EditText
            android:id="@+id/edt_name"
            style="@style/_add_address_edit"
            android:layout_marginLeft="10dp"
            android:gravity="right|center_vertical"
            android:hint="请输入联系人" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/me_2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_bgline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_height"
        android:layout_marginLeft="12dp"
        android:paddingRight="10dp" >

        <TextView
            style="@style/_add_address_text"
            android:text="联系电话" />

        <EditText
            android:id="@+id/edt_phone"
            style="@style/_add_address_edit"
            android:layout_marginLeft="10dp"
            android:gravity="right|center_vertical"
            android:hint="请输入联系电话"
            android:phoneNumber="true" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/me_2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_bgline" />

    <LinearLayout
        android:id="@+id/ll_ewm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_height"
        android:layout_marginLeft="12dp"
        android:paddingRight="10dp" >

        <TextView
            style="@style/_add_address_text"
            android:text="店铺二维码" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_fxsewm" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/me_2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_bgline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_height"
        android:layout_marginLeft="12dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="售后地址"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_size_minus" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/address_height"
            android:layout_weight="2"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp" >

            <Spinner
                android:id="@+id/edt_province"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:prompt="@string/cmm_prompt_province"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_size_minus" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="@string/cmm_txt_contact"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_size_normal" />

            <Spinner
                android:id="@+id/edt_city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:prompt="@string/cmm_prompt_city"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_size_minus" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="@string/cmm_txt_contact"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_size_minus" />

            <Spinner
                android:id="@+id/edt_district"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:prompt="@string/cmm_prompt_county"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_size_normal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/me_2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_bgline" />

    <EditText
        android:id="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_height"
        android:layout_marginLeft="87dp"
        android:background="@null"
        android:gravity="left|center_vertical"
        android:hint="详细地址"
        android:textColor="@color/bg_666666"
        android:textSize="@dimen/txt_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_bgline" />

</LinearLayout>