<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="47dp"
    android:background="@drawable/bg_red_ww"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="84dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="45"
        android:textColor="#FF0000"
        android:textSize="@dimen/txt_size_big" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" >

        <TextView
            android:id="@+id/tv_red_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="新人红包"
            android:textColor="@color/txt_333333"
            android:textSize="@dimen/txt_size_9" />

        <TextView
            android:id="@+id/tv_red_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="新人红包"
            android:textColor="@color/bg_666666"
            android:textSize="@dimen/txt_size_9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="有效期："
                android:textColor="@color/bg_666666"
                android:textSize="@dimen/txt_size_9" />

            <TextView
                android:id="@+id/tv_red_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="新人红包"
                android:textColor="@color/bg_666666"
                android:textSize="@dimen/txt_size_9" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>