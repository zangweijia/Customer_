<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center"
        android:paddingLeft="@dimen/back_padding_left" >

        <TextView
            android:id="@+id/btn_return"
            android:layout_width="@dimen/back_width"
            android:layout_height="@dimen/back_height"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="@string/txt_title_verify"
            android:textColor="@color/findpass_title"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:textColor="@color/findpass_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_bgline" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_white"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_bgline" />

        <LinearLayout
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/address_height"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="@string/txt_verify_name"
                android:textColor="@color/txt_333333"
                android:textSize="@dimen/txt_size_small" />

            <EditText
                android:id="@+id/edt_real_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_transparent"
                android:gravity="right|center_vertical"
                android:hint="@string/txt_verify_name_hint"
                android:textColor="@color/bg_999999"
                android:textSize="@dimen/txt_size_small" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_bgline" />

        <LinearLayout
            android:id="@+id/btn_shipping_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/address_height"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="@string/txt_verify_idcard"
                android:textColor="@color/txt_333333"
                android:textSize="@dimen/txt_size_small" />

            <EditText
                android:id="@+id/edt_id_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_transparent"
                android:gravity="right|center_vertical"
                android:hint="@string/txt_verify_idcard_hint"
                android:inputType="text"
                android:textColor="@color/bg_999999"
                android:textSize="@dimen/txt_size_small" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_bgline" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/bg_bgline" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/bg_bgline"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:text="@string/txt_verify_content"
            android:textColor="@color/bg_666666"
            android:textSize="@dimen/txt_size_minus" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bg_bgline"
            android:paddingLeft="12dp"
            android:paddingTop="10dp" >

            <RelativeLayout
                android:layout_width="12dp"
                android:layout_height="12dp" >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/id_select" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/sure" />
            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="我同意身份证信息将由商家用于商品清关"
                android:textColor="@color/txt_333333"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/address_height"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_press_"
                android:gravity="center"
                android:text="确认提交"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_size_15" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>