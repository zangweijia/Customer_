<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_bgline"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/back_padding_left" >

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/back_width"
            android:layout_height="@dimen/back_height"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="修改手机号码"
            android:textColor="@color/findpass_title"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_now_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_height"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="当前手机号"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_size_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_height"
        android:background="@android:color/white" >

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/address_height"
            android:layout_marginLeft="20dp"
            android:layout_weight="4"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:textSize="@dimen/txt_size_15" />

        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/bg_findpass"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/edit_hint"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_password_next"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_size_15" />

</LinearLayout>