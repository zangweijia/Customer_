<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/iv_product_thumbnails"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_default_image" />

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:lineSpacingMultiplier="1.0"
            android:lines="2"
            android:text="@string/txt_shops_default_name"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txt_size_minus" />

        <TextView
            android:id="@+id/txt_product_tax"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="left|center_vertical"
            android:text="@string/txt_cart_product_tax"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/txt_size_normal"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:paddingBottom="2dp"
            android:text="￥188"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txt_size_12" />

        <TextView
            android:id="@+id/txt_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right|top"
            android:paddingTop="2dp"
            android:text="x1"
            android:textColor="@color/txt_deep_gray"
            android:textSize="@dimen/txt_size_12" />

        <LinearLayout
            android:id="@+id/ll_customer_service"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_customer_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:background="@drawable/black_gray"
                android:gravity="center"
                android:text="@string/txt_order_customer_service"
                android:textColor="@color/main_color"
                android:textSize="@dimen/txt_size_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_customer_refund"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_customer_refund"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/black_gray"
                android:gravity="center"
                android:text="退款"
                android:textColor="@color/main_color"
                android:textSize="@dimen/txt_size_14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>