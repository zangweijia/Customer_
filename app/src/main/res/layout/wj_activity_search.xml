<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/black_gray2" >

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="3dp"
                android:gravity="left|center_vertical"
                android:hint=" 搜索商品 分类 功效"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_size_normal" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="搜索"
            android:paddingLeft="3dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_size_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_bgline" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_transparent"
        android:drawableLeft="@drawable/search_hot"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/txt_search_hot"
        android:textColor="@color/txt_black"
        android:textSize="@dimen/txt_size_small" />

    <com.bopinjia.customer.view.SearchTipsGroupView
        android:id="@+id/search_tips"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="2" >
    </com.bopinjia.customer.view.SearchTipsGroupView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@color/bg_transparent"
            android:drawableLeft="@drawable/search_time"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/txt_search_latest"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txt_size_small" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/search_close"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="清空"
            android:textColor="#4D739F"
            android:textSize="@dimen/txt_size_12" />
    </LinearLayout>

    <com.bopinjia.customer.view.SearchTipsGroupView
        android:id="@+id/grd_lately"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="7" >
    </com.bopinjia.customer.view.SearchTipsGroupView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>